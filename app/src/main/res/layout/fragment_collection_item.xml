<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_component_lists_single_line_height"
    android:layout_marginStart="@dimen/material_component_lists_icon_left_padding"
    android:layout_marginEnd="@dimen/material_component_lists_right_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/collection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/material_component_lists_single_line_text_size"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Collection name that is very long to test the ellipsize attribute" />

</LinearLayout>
